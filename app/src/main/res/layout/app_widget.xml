<?xml version="1.0" encoding="utf-8"?>

<!-- Panel for widget update date and number of updates -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/section_update"
    style="@style/AppWidgetSection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    tools:context="com.example.gooner10.androiddeveloperfundamentals.widget.WidgetProvider">

    <TextView
        android:id="@+id/appwidget_update_label"
        style="@style/AppWidgetLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="Last updated" />

    <TextView
        android:id="@+id/appwidget_update"
        style="@style/AppWidgetText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date Count" />

    <Button
        android:id="@+id/button_update"
        style="@style/AppWidgetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/section_update" />
</LinearLayout>


